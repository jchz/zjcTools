<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/zjcWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/zjc_dimen_36">

    <ProgressBar
        android:layout_width="@dimen/zjc_dimen_56"
        android:layout_height="@dimen/zjc_dimen_56"
        android:layout_margin="@dimen/zjc_dimen_16" />

    <TextView
        android:id="@+id/zjc_dialog_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zjc_progress_wait"
        android:textColor="@color/zjc_Gray54"
        android:textSize="@dimen/zjc_size_16" />
</LinearLayout>