<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tvPoint"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/zjc_point_blue"
                android:layout_marginRight="8dp"/>
        <TextView
                android:id="@+id/tvTitle"
                style="@style/text_14_black"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/tvPoint"
                android:layout_height="wrap_content"
                android:text="标题"/>
        <TextView
                android:id="@+id/tvRightStar"
                android:layout_toRightOf="@id/tvTitle"
                style="@style/text_14_red"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"/>

        <ImageView
                android:id="@+id/ivRightArrow"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/zjc_ic_arrow_right_gray"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvDesc"
                android:layout_toLeftOf="@id/ivRightArrow"
                android:layout_toRightOf="@id/tvTitle"
                android:paddingLeft="10dp"
                style="@style/text_14_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="请输入"/>
    </RelativeLayout>
    <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:background="@color/app_divide"
            android:layout_height="1dp"/>
</LinearLayout>
